<!--  region #1  -->
<Window
    x:Class="SimpleDockingApplication.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
    Title="Window1"
    Width="500"
    Height="300">
    <Grid>
        <dxdo:DockLayoutManager Name="dockManager1" Margin="12,0,0,25">
            <dxdo:LayoutGroup Orientation="Horizontal">
                <dxdo:DocumentGroup x:Name="documentGroup">
                    <dxdo:DocumentPanel x:Name="paneDocument1" Caption="Document 1">
                        <RichTextBox />
                    </dxdo:DocumentPanel>
                    <dxdo:DocumentPanel x:Name="paneDocument2" Caption="Document 2">
                        <RichTextBox />
                    </dxdo:DocumentPanel>
                </dxdo:DocumentGroup>
            </dxdo:LayoutGroup>
        </dxdo:DockLayoutManager>
        <Button
            Name="button1"
            Width="100"
            Height="23"
            Margin="12,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Click="button1_Click">
            Add New Tab
        </Button>
    </Grid>
</Window>
<!--  endregion #1  -->
